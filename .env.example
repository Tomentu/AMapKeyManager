# ====================================
# 数据库配置
# ====================================
DB_USER=root                 # 数据库用户名
DB_PASS=your_password       # 数据库密码
DB_HOST=localhost          # 数据库主机地址
DB_PORT=3306              # 数据库端口
DB_NAME=amkm             # 数据库名称

# 数据库连接池配置
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_ECHO=false

# ====================================
# 日志配置
# ====================================
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_BYTES=10485760      # 10MB
LOG_BACKUP_COUNT=5

# ====================================
# 代理配置
# ====================================
PROXY_ENABLED=false         # 是否启用代理
HTTP_PROXY=http://127.0.0.1:10809
HTTPS_PROXY=http://127.0.0.1:10809

# ====================================
# API配置
# ====================================
AMAP_BASE_URL=https://restapi.amap.com
REQUEST_TIMEOUT=180000      # 请求超时时间(毫秒)

# ====================================
# 管理员配置
# ====================================
ADMIN_USERNAME=admin        # 管理员用户名
ADMIN_PASSWORD=change_me    # 管理员密码

# ====================================
# 时区配置
# ====================================
TIMEZONE=Asia/Shanghai      # 时区
KEY_RESET_HOUR=1           # key重置时间(0-23)

# ====================================
# Flask配置
# ====================================
FLASK_ENV=development      # development 或 production
FLASK_DEBUG=true          # 是否开启调试模式
SECRET_KEY=your-secret-key-please-change-it

# ====================================
# 安全配置
# ====================================
SESSION_COOKIE_SECURE=false    # 在生产环境中设置为true
SESSION_COOKIE_HTTPONLY=true
PERMANENT_SESSION_LIFETIME=1800  # 会话超时时间(秒) 